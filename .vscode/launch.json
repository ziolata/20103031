    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flutter",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": ["--no-sound-null-safety"],
            "cwd": "${workspaceFolder}",
            "flutterMode": "debug",
            "vmAdditionalArgs": ["--disable-service-auth-codes"]
          },
          {
            "name": "Flutter Test",
            "request": "launch",
            "type": "dart",
            "program": "test/**/*.dart",
            "cwd": "${workspaceFolder}",
            "flutterMode": "debug"
          },
          {
            "name": "Dart",
            "request": "launch",
            "type": "dart",
            "program": "bin/main.dart",
            "cwd": "${workspaceFolder}",
            "args": ["arg1", "arg2"]
          },
        {
            "name": "connection",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "connection (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "connection (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        }
        
    ]
}